<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Rapid.Utilities"
	mc:Ignorable="d"
	x:Class="Rapid.Utilities.DrawDD"
	x:Name="UserControl"
	d:DesignWidth="640" Width="Auto" Margin="0">

	<Grid x:Name="LayoutRoot" Background="#02000000">
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
        <local:ScrToolbar x:Name="ScrT"  BorderThickness="2" Margin="0" Foreground="Black" Height="45" VerticalAlignment="Center"/>
	</Grid>
</UserControl>