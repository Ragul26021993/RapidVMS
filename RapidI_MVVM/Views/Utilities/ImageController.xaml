<Grid x:Class="Rapid.Utilities.ImageController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="200" d:DesignHeight="200">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
			<ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>        
        <Border BorderThickness="1">
            <Image x:Name="IconImg"  Source="{Binding Path=MyImageSource}"/>
        </Border>
		<Button x:Name="SomeBtn" Grid.Column="1" VerticalAlignment="Top" Height="30" Content="Add Image"/>
    </Grid>
</Grid>
