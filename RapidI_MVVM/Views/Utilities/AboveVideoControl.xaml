<Grid
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Rapid.Utilities.AboveVideoControl"
	x:Name="MainGrid"
	d:DesignWidth="640" d:DesignHeight="42" Height="50" VerticalAlignment="Top">
	<Grid.ColumnDefinitions>
		<ColumnDefinition Width="150"/>
		<ColumnDefinition Width="0.705*"/>
	</Grid.ColumnDefinitions>
	<Border BorderBrush="Black" BorderThickness="2" Margin="1" CornerRadius="5" Background="{DynamicResource MessageBackColor}">
		<StackPanel x:Name="stSelectedImages" Margin="2" Orientation="Horizontal">
			<Image x:Name="imgMeasure" HorizontalAlignment="Left"  Width="45" Margin="0,0.166"/>
			<Image x:Name="imgDraw" HorizontalAlignment="Left"  Width="45" Margin="2,0,0,0"/>
			<Image x:Name="imgCrosshair" HorizontalAlignment="Left" Width="45" Margin="2,0.166,0,0.166"/>
		</StackPanel>
	</Border>
	<Border x:Name="bdrHelp" BorderBrush="Black" BorderThickness="2" Grid.Column="1" Margin="1" CornerRadius="5" Background="{DynamicResource MessageBackColor}"/>

</Grid>