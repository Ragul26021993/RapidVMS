<Grid
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
    x:Class="Rapid.Utilities.ToolbarGrid"
    x:Name="Toolbar">
	
	<Grid.ColumnDefinitions>
        <ColumnDefinition/>
		<ColumnDefinition Width="50"/>
    </Grid.ColumnDefinitions>
    <Rectangle Margin="0" StrokeThickness="0" Grid.ColumnSpan="4" Fill="{DynamicResource PanelBackground}"/>
    <Button x:Name="btnMaxMin" Content="" Margin="0" Width="50" Style="{DynamicResource ScrollToolbar_NormalButton2}" Background="{x:Null}" HorizontalAlignment="Right" ToolTip="Maximize" Grid.Column="1"/>
</Grid>
