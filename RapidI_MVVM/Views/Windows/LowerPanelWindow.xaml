<Win:FadeableWin
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Win="clr-namespace:Rapid.Windows"
	x:Class="Rapid.Windows.LowerPanelWindow"
	Title="LowerPanelWindow"
	Width="640" Height="480" Background="{x:Null}" WindowStyle="None" ShowInTaskbar="False" ResizeMode="NoResize" AllowsTransparency="True">
	
	<Grid>
		<Border CornerRadius="7" Background="Black" Opacity="0.7" Margin="5">
			<Border.Effect>
				<BlurEffect Radius="8"/>
			</Border.Effect>
		</Border>
		<Border x:Name="LayoutRoot" CornerRadius="4" Background="{DynamicResource PanelBackground}" BorderBrush="#FF858585" BorderThickness="0.75" Margin="6">
			<GroupBox x:Name="LowerPanelWinContainer" Margin="1" BorderThickness="0"/>
		</Border>
	</Grid>
</Win:FadeableWin>