<Window x:Class="Rapid.Windows.PPreviewWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PPreviewWin" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight">
	<Grid>
    <Border CornerRadius="7" BorderBrush="Black" BorderThickness="5" Margin="1" Opacity="0.5">
    	<Border.Effect>
    		<BlurEffect Radius="5"/>
    	</Border.Effect>
    </Border>
    <Border BorderThickness="1" CornerRadius="4" BorderBrush="White" Margin="6">
    	<Border BorderThickness="7" BorderBrush="#4C3A426E" CornerRadius="0.05">
    		<Grid Background="#4C3A426E">
    			<Image x:Name="PreviewImage" Width="350" Height="300"/>
    		</Grid>
    	</Border>
    </Border>
	</Grid>
</Window>
